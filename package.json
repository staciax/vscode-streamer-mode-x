{
    "name": "vscode-streamer-mode-x",
    "module": "src/extension.ts",
    "displayName": "Streamer Mode X",
    "description": "A Visual Studio Code extension that protects sensitive files",
    "version": "0.1.0",
    "publisher": "staciax",
    "repository": {
        "type": "git",
        "url": "https://github.com/staciax/vscode-streamer-mode-x.git"
    },
    "bugs": {
        "url": "https://github.com/staciax/vscode-streamer-mode-x/issues"
    },
    "galleryBanner": {
        "color": "#C3B1E1",
        "theme": "light"
    },
    "keywords": [
        "streamer",
        "streaming",
        "security",
        "privacy",
        "sensitive",
        "protection",
        "env",
        "secrets",
        "api-keys",
        "certificates"
    ],
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.95.0"
    },
    "categories": [
        "Other",
        "Visualization",
        "Education"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "walkthroughs": [
            {
                "id": "streamer-mode-walkthrough",
                "title": "Get Started with Streamer Mode X",
                "description": "Learn how to protect your sensitive files.",
                "steps": [
                    {
                        "id": "intro",
                        "title": "Welcome",
                        "description": "media/walkthrough/intro.md",
                        "media": {
                            "image": "media/icon.png",
                            "altText": "Streamer Mode X Icon"
                        }
                    },
                    {
                        "id": "usage",
                        "title": "How to Use",
                        "description": "media/walkthrough/usage.md",
                        "media": {
                            "markdown": "media/walkthrough/usage.md"
                        }
                    }
                ]
            }
        ],
        "commands": [
            {
                "command": "streamer-mode.toggle",
                "title": "Toggle",
                "category": "Streamer Mode"
            },
            {
                "command": "streamer-mode.addAssociation",
                "title": "Add File Association",
                "category": "Streamer Mode"
            },
            {
                "command": "streamer-mode.removeAssociation",
                "title": "Remove File Association",
                "category": "Streamer Mode"
            },
            {
                "command": "vscode-streamer-mode-x.toggleHideFile",
                "title": "Toggle Streamer Mode Hide",
                "category": "Streamer Mode",
                "icon": "$(eye)"
            }
        ],
        "customEditors": [
            {
                "viewType": "streamer-mode",
                "displayName": "Streamer Mode",
                "selector": [
                    {
                        "filenamePattern": "*.{env,pem,key,cer,crt,p12,pfx}*"
                    }
                ],
                "priority": "default"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "vscode-streamer-mode-x.toggleHideFile",
                    "group": "2_workspace@1"
                }
            ],
            "editor/title": [
                {
                    "command": "vscode-streamer-mode-x.toggleHideFile",
                    "group": "navigation",
                    "when": "resourceLangId"
                }
            ]
        },
        "keybindings": [
            {
                "command": "vscode-streamer-mode-x.toggleHideFile",
                "key": "ctrl+alt+h",
                "mac": "ctrl+cmd+h",
                "when": "editorTextFocus"
            },
            {
                "command": "streamer-mode.toggle",
                "key": "ctrl+alt+s",
                "mac": "ctrl+cmd+s"
            }
        ],
        "configuration": {
            "title": "Streamer Mode",
            "properties": {
                "streamer-mode.autoDetected.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically enable streamer mode when streaming software is detected."
                },
                "streamer-mode.autoDetected.interval.active": {
                    "type": "number",
                    "default": 60,
                    "description": "Polling interval in seconds when Streamer Mode is enabled."
                },
                "streamer-mode.autoDetected.interval.inactive": {
                    "type": "number",
                    "default": 30,
                    "description": "Polling interval in seconds when Streamer Mode is disabled."
                },
                "streamer-mode.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable or disable Streamer Mode."
                },
                "streamer-mode.decoration.propagate": {
                    "type": "boolean",
                    "default": true,
                    "description": "Propagate the hidden file decoration to parent folders."
                }
            }
        },
        "colors": [
            {
                "id": "streamerMode.hiddenFile",
                "description": "Color for files hidden in streamer mode",
                "defaults": {
                    "light": "#555c7e",
                    "dark": "#555c7e"
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "bun run package",
        "compile": "bun run lint && bun esbuild.ts",
        "watch": "bun run compile --watch --outdir ./out",
        "watch:esbuild": "bun esbuild.ts --watch",
        "package": "bun run lint && bun esbuild.ts --production",
        "compile-tests": "bun build --sourcemap --outdir out --external 'vscode' --format cjs --target node src/*.ts src/**/*.ts",
        "test": "vscode-test",
        "pretest": "bun run compile-tests && bun run compile && bun run lint",
        "lint": "biome check . && biome format .",
        "format": "biome check --write . && biome format . --write"
    },
    "dependencies": {
        "@vscode/codicons": "~0.0.43",
        "find-process": "~2.0.0",
        "vscode-uri": "~3.1.0"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.8",
        "@types/mocha": "^10.0.10",
        "@types/node": "^24.10.1",
        "@types/vscode": "^1.95.0",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2",
        "esbuild": "~0.27.0",
        "ovsx": "~0.10.7"
    },
    "peerDependencies": {
        "typescript": "^5.7.3"
    }
}
